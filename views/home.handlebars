<div class="container py-5 px-4">
  <!-- For demo purpose-->
  <div class="row d-flex justify-content-end align-items-stretch">
    <div class="alert alert-primary mb-0" role="alert" id="username">
      {{{user.name}}}
    </div>
    <a href="/logout" class="alert alert-danger ml-2 mb-0">Logout</a>
  </div>
  <div class="row rounded-lg overflow-hidden shadow mt-2">
    <!-- Users box-->
    <div class="col-5 px-0">
      <div class="bg-white">

        <div class="bg-gray px-4 py-2 bg-light">
          <p class="h5 mb-0 py-1">Recent</p>
        </div>

        <div class="messages-box">
          <div class="list-group rounded-0" id="user-box">

          </div>
        </div>
      </div>
    </div>
    <!-- Chat Box-->
    <div class="col-7 px-0">
      <div class="px-4 py-5 chat-box bg-white" id="chat-box">

        <!-- Reciever Message-->
       

      </div>

      <!-- Typing area -->
      <form action="#" class="bg-light" id="message-form">
        <div class="input-group">
          <input type="text" placeholder="Type a message" aria-describedby="button-addon2" class="form-control rounded-0 border-0 py-4 bg-light" id="message">
          <div class="input-group-append">
            <button id="button-addon2" type="submit" class="btn btn-link"> <i class="fa fa-paper-plane"></i></button>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>